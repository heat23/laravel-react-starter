includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app
        - routes
        - config

    # Start at level 5 for production-grade projects
    # Levels: 0-9 (0=loosest, 9=strictest)
    level: 5

    # Ignore patterns
    ignoreErrors:
        # Allow dynamic properties on models (Laravel magic)
        - '#Access to an undefined property App\\Models\\[a-zA-Z]+::\$[a-zA-Z]+#'

    # Check test files too
    checkMissingIterableValueType: false

    # Discover symbols in test files
    scanDirectories:
        - tests

    # Cache for faster subsequent runs
    tmpDir: storage/phpstan
